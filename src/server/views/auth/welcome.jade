extends layout

block content
  div.container.index_wrapper
    div.row
      div.col-lg-12
        h1 Welcome
        h2 Create a admin account
        form.form-signin#form(method="post",action="/users")
          input(type="hidden", name="permissions", value="3")
          input.form-control.top-input#name(type="text",placeholder="name",name="name",autofocus)
          input.form-control.middle-input#pass(type="text",placeholder="username",name="username")
          input.form-control.middle-input#pass(type="email",placeholder="email",name="email")
          input.form-control.bottom-input#pass(type="password",placeholder="password",name="password")
          if error
            p.text-danger #{error}
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit